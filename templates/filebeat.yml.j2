---
filebeat:
  prospectors:
{% for logfile in logstash_client_combined_logfiles %}
    - paths:
{% for path in logfile.paths %}
        - {{ path }}
{% endfor %}
      document_type: {{ logfile.document_type }}
{% endfor %}

output:
  logstash:
    enabled: true
    hosts:
      - "{{ elk_logserver_ip_address }}:5000"

  console:
    pretty: true

logging:
  level: debug
  to_files: true
  to_syslog: false
  files:
    path: /var/log/
    name: filebeat.log
    keepfiles: 7
