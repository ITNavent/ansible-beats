---
input:
  period: 10
  stats:
    system: true
    process: true
    filesystem: true

output:
  logstash:
    enabled: true
    hosts:
      - "{{ elk_logserver_ip_address }}:5000"
  console:
    pretty: true
{% if logstash_client_ssl_certificate is defined and
      logstash_client_ssl_certificate != "" %}
    tls:
      certificate_authorities:
        - "{{ logstash_client_ssl_certificate_base_directory }}/{{ logstash_forwarder_certificate_fullpath }}"
{% endif %}

logging:
  level: debug
  to_files: true
  to_syslog: false
  files:
    path: /var/log/
    name: topbeat.log
    keepfiles: 7

