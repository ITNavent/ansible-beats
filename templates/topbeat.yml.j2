---
input:
  period: 10
  stats:
    system: true
    process: true
    filesystem: true

output:
  logstash:
    enabled: true
    hosts:
      - "{{ elk_logserver_ip_address }}:5000"

  console:
    pretty: true

logging:
  level: debug
  to_files: true
  to_syslog: false
  files:
    path: /var/log/
    name: topbeat.log
    keepfiles: 7

